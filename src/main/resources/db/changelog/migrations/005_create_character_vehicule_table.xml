<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="005_create_character_vehicle_table" author="KD">
        <createTable tableName="character_vehicle">
            <column name="character_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="vehicle_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="character_vehicle"
                       columnNames="character_id, vehicle_id"
                       constraintName="pk_character_vehicle"/>

        <addForeignKeyConstraint baseTableName="character_vehicle"
                                 baseColumnNames="character_id"
                                 constraintName="fk_character_vehicle_character"
                                 referencedTableName="characters"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="character_vehicle"
                                 baseColumnNames="vehicle_id"
                                 constraintName="fk_character_vehicle_vehicle"
                                 referencedTableName="vehicles"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>