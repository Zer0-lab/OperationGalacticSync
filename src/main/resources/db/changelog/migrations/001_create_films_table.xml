<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

  <changeSet id="001_create_films_table" author="kd">
    <createTable tableName="films">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="api_film_id" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="title" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="episode_id" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex tableName="films" indexName="idx_films_api_film_id" unique="true">
      <column name="api_film_id"/>
    </createIndex>

    <rollback>
      <dropTable tableName="films"/>
    </rollback>
  </changeSet>
</databaseChangeLog>