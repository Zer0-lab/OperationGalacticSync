<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

  <changeSet id="003-create-vehicule-table" author="chatgpt">
    <createTable tableName="vehicules">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="api_vehicle_id" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="model" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="manufacturer" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="cost_in_credits" type="VARCHAR(255)"/>

      <column name="length" type="VARCHAR(255)"/>

      <column name="max_atmosphering_speed" type="VARCHAR(255)"/>

      <column name="crew" type="VARCHAR(255)"/>

      <column name="passengers" type="VARCHAR(255)"/>

      <column name="cargo_capacity" type="VARCHAR(255)"/>

      <column name="consumables" type="VARCHAR(255)"/>

      <column name="vehicle_class" type="VARCHAR(255)"/>
    </createTable>
  </changeSet>

</databaseChangeLog>